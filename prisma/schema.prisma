// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String?
  password  String

  habits Habit[] // User can have multiple habits.

  @@map("users")
}

model Habit {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String // Name of the habit.
  description String? // Optional description of the habit.
  userId    String // Foreign key to the User model.
  user      User     @relation(fields: [userId], references: [id]) // Relation to the User model.
  frequency Frequency @default(DAILY) // How often the user wants to perform the habit.  Defaults to daily.
  goalQuantity Int? // The number of times to complete the habit for each frequency.  For example, run for 30 minutes daily.

  habitCompletions HabitCompletion[] // Habit can have multiple completions.

  @@map("habits")
}

model HabitCompletion {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  habitId String // Foreign key to the Habit model.
  habit   Habit  @relation(fields: [habitId], references: [id]) // Relation to the Habit model.
  completedAt DateTime @default(now()) // Timestamp of when the habit was completed.
  notes String? // Optional notes about the completion.

  @@map("habit_completions")
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
}

model Course {
  id            String        @id @default(uuid())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  title         String
  slug          String        @unique
  shortSummary  String?
  description   String?

  level         CourseLevel   @default(BEGINNER)
  format        String?       // e.g. "online", "in-person", "hybrid"
  duration      String?       // e.g. "6 weeks", "2-day bootcamp"
  price         Int?          // price in smallest currency unit or whole

  // Tech and topic classification
  techStack     String[]      // e.g. ["Python", "Pandas", "Excel"]
  tools         String[]      // e.g. ["Word", "PowerPoint"]
  tags          String[]      // e.g. ["data-science", "beginner"]
  
  // Learning outcomes - what students will learn
  learningOutcomes String[]   // e.g. ["Build web apps", "Deploy to cloud"]

  heroImageUrl  String?

  isPublished   Boolean       @default(false)

  sections      CourseSection[]
  leads         Lead[]
}

model CourseSection {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  courseId  String
  course    Course   @relation(fields: [courseId], references: [id])

  title     String
  order     Int
  content   String?  // markdown or rich text
}

model Lead {
  id        String      @id @default(uuid())
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  name      String
  email     String
  phone     String?

  message   String?
  source    String      // e.g. "course-page", "contact-page"
  status    LeadStatus  @default(NEW)

  courseId  String?
  course    Course?     @relation(fields: [courseId], references: [id])
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum LeadStatus {
  NEW
  CONTACTED
  ENROLLED
  LOST
}

// Blog Post Model
model BlogPost {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  title       String
  slug        String      @unique
  excerpt     String?     // Short summary for cards
  content     String?     // Full markdown content
  
  coverImage  String?     // URL to cover image
  
  author      String?     // Author name
  category    String?     // e.g. "Data Science", "Career Tips", "Tutorials"
  tags        String[]    // e.g. ["python", "beginners", "tips"]
  
  readTime    Int?        // Estimated read time in minutes
  
  isPublished Boolean     @default(false)
  publishedAt DateTime?   // When the post was published
}

// Newsletter Subscriber Model
model NewsletterSubscriber {
  id          String                    @id @default(uuid())
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
  
  email       String                    @unique
  name        String?
  
  isActive    Boolean                   @default(true) // Can unsubscribe
  subscribedAt DateTime                 @default(now())
  unsubscribedAt DateTime?
  
  source      String?                   // Where they subscribed from (footer, popup, etc.)

  @@map("newsletter_subscribers")
}

// Newsletter Campaign Model
model Newsletter {
  id          String                    @id @default(uuid())
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
  
  subject     String
  content     String                    // HTML or Markdown content
  previewText String?                   // Preview text for email clients
  
  status      NewsletterStatus          @default(DRAFT)
  
  sentAt      DateTime?
  sentCount   Int                       @default(0)
  openCount   Int                       @default(0)
  clickCount  Int                       @default(0)

  @@map("newsletters")
}

enum NewsletterStatus {
  DRAFT
  SCHEDULED
  SENDING
  SENT
  FAILED
}

// Blog Category Model
model BlogCategory {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  name        String      @unique
  slug        String      @unique
  description String?
  color       String?     // Hex color for badges

  posts       Post[]

  @@map("blog_categories")
}

// Blog Post Model (Enhanced)
model Post {
  id          String       @id @default(uuid())
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  title       String
  slug        String       @unique
  excerpt     String?      // Short summary for cards
  content     String?      // Full markdown content
  
  coverImage  String?      // URL to cover image
  
  author      String?      // Author name
  authorImage String?      // Author avatar URL
  
  categoryId  String?
  category    BlogCategory? @relation(fields: [categoryId], references: [id])
  
  tags        String[]     // e.g. ["python", "beginners", "tips"]
  
  readTime    Int?         // Estimated read time in minutes
  views       Int          @default(0)
  
  isPublished Boolean      @default(false)
  isFeatured  Boolean      @default(false)
  publishedAt DateTime?

  comments    Comment[]

  @@map("posts")
}

// Blog Comment Model
model Comment {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  content     String
  
  authorName  String
  authorEmail String
  
  postId      String
  post        Post        @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  parentId    String?     // For nested replies
  parent      Comment?    @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     Comment[]   @relation("CommentReplies")
  
  isApproved  Boolean     @default(false) // Moderation
  
  @@map("comments")
}

// Contact Form Submission Model
model ContactSubmission {
  id          String        @id @default(uuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  name        String
  email       String
  phone       String?
  subject     String
  message     String
  
  status      ContactStatus @default(NEW)
  
  notes       String?       // Admin notes
  respondedAt DateTime?

  @@map("contact_submissions")
}

enum ContactStatus {
  NEW
  READ
  RESPONDED
  ARCHIVED
}

// ============ INSTRUCTOR & STUDENT PORTAL MODELS ============

// Instructor Model
model Instructor {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  email       String      @unique
  password    String
  name        String
  bio         String?
  avatar      String?
  title       String?     // e.g. "Senior Data Scientist"
  expertise   String[]    // e.g. ["Python", "Machine Learning"]
  slug        String?  @unique
  linkedinUrl String?
  twitterUrl  String?
  githubUrl   String?
  
  isActive    Boolean     @default(true)
  isVerified  Boolean     @default(false)

  courses     InstructorCourse[]

  @@map("instructors")
}

// Student Model
model Student {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  email       String      @unique
  password    String
  name        String
  avatar      String?
  phone       String?
  
  isActive    Boolean     @default(true)
  
  enrollments    Enrollment[]
  notifications  Notification[]
  certificates   Certificate[]
  streak         LearningStreak?
  achievements   Achievement[]
  courseRatings  CourseRating[]
  lessonComments LessonComment[]

  @@map("students")
}

// Instructor-Course Relationship (with role)
model InstructorCourse {
  id           String     @id @default(uuid())
  createdAt    DateTime   @default(now())
  
  instructorId String
  instructor   Instructor @relation(fields: [instructorId], references: [id], onDelete: Cascade)
  
  courseId     String
  course       ManagedCourse @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  role         InstructorRole @default(INSTRUCTOR)

  @@unique([instructorId, courseId])
  @@map("instructor_courses")
}

enum InstructorRole {
  OWNER       // Created the course, full control
  INSTRUCTOR  // Can teach but not delete
  ASSISTANT   // Limited access
}

// Managed Course (courses with lessons and enrollments)
model ManagedCourse {
  id            String        @id @default(uuid())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  title         String
  slug          String        @unique
  shortSummary  String?
  description   String?
  
  level         CourseLevel   @default(BEGINNER)
  format        String?       // "online", "in-person", "hybrid"
  duration      String?       // "6 weeks"
  price         Int           @default(0)  // 0 = free
  
  techStack     String[]
  tags          String[]
  learningOutcomes String[]
  
  heroImageUrl  String?
  
  isPublished   Boolean       @default(false)
  isFeatured    Boolean       @default(false)
  
  maxStudents   Int?          // null = unlimited
  
  startDate     DateTime?
  endDate       DateTime?

  instructors   InstructorCourse[]
  modules       CourseModule[]
  enrollments   Enrollment[]
  ratings       CourseRating[]

  @@map("managed_courses")
}

// Course Module (container for lessons)
model CourseModule {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  courseId    String
  course      ManagedCourse @relation(fields: [courseId], references: [id], onDelete: Cascade)

  title       String
  description String?
  order       Int

  lessons     Lesson[]

  @@map("course_modules")
}

// Lesson Model
model Lesson {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  moduleId    String
  module      CourseModule @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  title       String
  description String?
  content     String?     // Markdown content
  videoUrl    String?     // Video URL (YouTube, Vimeo, etc.)
  duration    Int?        // Duration in minutes
  order       Int
  
  isFree      Boolean     @default(false)  // Free preview
  isPublished Boolean     @default(false)
  
  resources   LessonResource[]
  progress    LessonProgress[]
  comments    LessonComment[]

  @@map("lessons")
}

// Lesson Resource (downloadable files, links)
model LessonResource {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())

  lessonId    String
  lesson      Lesson      @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  title       String
  type        ResourceType
  url         String

  @@map("lesson_resources")
}

enum ResourceType {
  PDF
  VIDEO
  LINK
  CODE
  FILE
}

// Student Enrollment
model Enrollment {
  id          String           @id @default(uuid())
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  studentId   String
  student     Student          @relation(fields: [studentId], references: [id], onDelete: Cascade)

  courseId    String
  course      ManagedCourse    @relation(fields: [courseId], references: [id], onDelete: Cascade)

  status      EnrollmentStatus @default(ACTIVE)
  
  enrolledAt  DateTime         @default(now())
  completedAt DateTime?
  
  progress    Int              @default(0)  // 0-100 percentage
  
  lessonProgress LessonProgress[]
  certificate    Certificate?

  @@unique([studentId, courseId])
  @@map("enrollments")
}

enum EnrollmentStatus {
  PENDING     // Waiting for approval/payment
  ACTIVE      // Currently enrolled
  COMPLETED   // Finished the course
  CANCELLED   // Dropped out
  EXPIRED     // Access expired
}

// Lesson Progress Tracking
model LessonProgress {
  id           String     @id @default(uuid())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  enrollmentId String
  enrollment   Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)

  lessonId     String
  lesson       Lesson     @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  isCompleted  Boolean    @default(false)
  completedAt  DateTime?
  
  watchTime    Int        @default(0)  // Seconds watched
  lastPosition Int        @default(0)  // Last video position

  @@unique([enrollmentId, lessonId])
  @@map("lesson_progress")
}

// ============ NOTIFICATIONS & CERTIFICATES ============

// Student Notification Model
model Notification {
  id          String           @id @default(uuid())
  createdAt   DateTime         @default(now())
  
  studentId   String
  student     Student          @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  type        NotificationType
  title       String
  message     String
  link        String?          // Optional link to navigate to
  
  isRead      Boolean          @default(false)
  readAt      DateTime?

  @@index([studentId, isRead])
  @@map("notifications")
}

enum NotificationType {
  ACCOUNT_APPROVED
  COURSE_ENROLLED
  COURSE_COMPLETED
  LESSON_REMINDER
  NEW_COURSE
  CERTIFICATE_READY
  GENERAL
}

// Certificate Model
model Certificate {
  id            String     @id @default(uuid())
  createdAt     DateTime   @default(now())
  
  studentId     String
  student       Student    @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  enrollmentId  String     @unique
  enrollment    Enrollment @relation(fields: [enrollmentId], references: [id], onDelete: Cascade)
  
  certificateNumber String  @unique  // e.g. "TECH4GH-2024-0001"
  issuedAt      DateTime   @default(now())
  
  courseName    String     // Snapshot of course name at completion
  studentName   String     // Snapshot of student name at completion
  instructorName String?   // Snapshot of instructor name
  
  pdfUrl        String?    // URL to stored PDF (optional)

  @@index([studentId])
  @@map("certificates")
}

// Learning Streak Model
model LearningStreak {
  id          String   @id @default(uuid())
  studentId   String   @unique
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  currentStreak Int    @default(0)
  longestStreak Int    @default(0)
  lastActiveDate DateTime?
  
  totalDaysActive Int  @default(0)
  
  @@map("learning_streaks")
}

// Achievement Model
model Achievement {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  type        AchievementType
  name        String
  description String
  icon        String?  // Icon name or emoji
  
  unlockedAt  DateTime @default(now())

  @@unique([studentId, type])
  @@map("achievements")
}

enum AchievementType {
  FIRST_LESSON
  FIRST_COURSE
  STREAK_7
  STREAK_30
  COURSES_3
  COURSES_10
  PERFECT_SCORE
  EARLY_BIRD
  NIGHT_OWL
}

// Course Rating / Review
model CourseRating {
  id          String        @id @default(uuid())
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  studentId   String
  student     Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)

  courseId    String
  course      ManagedCourse @relation(fields: [courseId], references: [id], onDelete: Cascade)

  rating      Int           // 1–5
  review      String?       // Optional written review

  @@unique([studentId, courseId])
  @@map("course_ratings")
}

// Lesson Discussion Comment
model LessonComment {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  lessonId    String
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  studentId   String
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  content     String

  parentId    String?
  parent      LessonComment?  @relation("LessonCommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     LessonComment[] @relation("LessonCommentReplies")

  @@map("lesson_comments")
}

// Testimonial (admin-managed, shown on homepage)
model Testimonial {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  name        String
  role        String?        // e.g. "Data Analyst at MTN"
  content     String         // The testimonial text
  rating      Int            @default(5)  // 1–5 stars
  imageUrl    String?        // Avatar
  companyLogo String?        // Optional company logo

  isVisible       Boolean  @default(true)
  showOnHomepage  Boolean  @default(true)
  order           Int      @default(0)

  @@map("testimonials")
}

// ============ TECHNOLOGY SOLUTIONS ============

model TechSolution {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  title           String
  slug            String   @unique
  shortSummary    String?  // One-liner shown on home page cards
  description     String?  // Full rich description
  
  category        String   // e.g. "Web Development", "Data Analytics", "Mobile Apps", "AI & Automation"

  imageUrl        String?  // Main showcase/hero image of the work
  galleryImages   String[] // Additional project images

  techStack       String[] // Technologies used, e.g. ["React", "Node.js", "PostgreSQL"]
  tags            String[] // e.g. ["fintech", "automation"]

  clientName      String?  // Client or project name
  clientLogo      String?  // Client logo URL
  liveUrl         String?  // Link to live project / case study

  isFeatured     Boolean  @default(false)  // Show in hero/spotlight
  isPublished    Boolean  @default(false)  // Controls visibility on site
  order          Int      @default(0)       // Manual ordering

  @@map("tech_solutions")
}

// ============ ABOUT PAGE ============

// Single-record about page content (singleton via id = "singleton")
model AboutPage {
  id            String   @id @default("singleton")
  updatedAt     DateTime @updatedAt

  // Hero
  heroTagline   String?  // Badge text, e.g. "About Tech4GH"
  heroTitle     String?  // Big headline
  heroSubtitle  String?  // Paragraph below headline
  heroImageUrl  String?  // Optional hero image

  // Mission
  missionTitle  String?
  missionBody   String?  // Long text / markdown

  // Vision  
  visionTitle   String?
  visionBody    String?

  // Story / Why Us
  storyTitle    String?
  storyBody     String?

  // Values cards (JSON array: [{icon, title, description}])
  values        Json     @default("[]")

  // Stats bar (JSON array: [{number, label}])
  stats         Json     @default("[]")

  // Gallery images (URLs)
  galleryImages String[]

  @@map("about_page")
}

// Team / People
model TeamMember {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  name        String
  role        String
  bio         String?
  imageUrl    String?
  linkedinUrl String?
  twitterUrl  String?
  githubUrl   String?
  order           Int      @default(0)
  isVisible       Boolean  @default(true)
  showOnHomepage  Boolean  @default(false)

  @@map("team_members")
}

// FAQ Items
model FaqItem {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  question  String
  answer    String
  order     Int      @default(0)
  isVisible Boolean  @default(true)

  @@map("faq_items")
}
