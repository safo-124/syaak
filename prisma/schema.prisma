// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String?
  password  String

  habits Habit[] // User can have multiple habits.

  @@map("users")
}

model Habit {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String // Name of the habit.
  description String? // Optional description of the habit.
  userId    String // Foreign key to the User model.
  user      User     @relation(fields: [userId], references: [id]) // Relation to the User model.
  frequency Frequency @default(DAILY) // How often the user wants to perform the habit.  Defaults to daily.
  goalQuantity Int? // The number of times to complete the habit for each frequency.  For example, run for 30 minutes daily.

  habitCompletions HabitCompletion[] // Habit can have multiple completions.

  @@map("habits")
}

model HabitCompletion {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  habitId String // Foreign key to the Habit model.
  habit   Habit  @relation(fields: [habitId], references: [id]) // Relation to the Habit model.
  completedAt DateTime @default(now()) // Timestamp of when the habit was completed.
  notes String? // Optional notes about the completion.

  @@map("habit_completions")
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
}

model Course {
  id            String        @id @default(uuid())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  title         String
  slug          String        @unique
  shortSummary  String?
  description   String?

  level         CourseLevel   @default(BEGINNER)
  format        String?       // e.g. "online", "in-person", "hybrid"
  duration      String?       // e.g. "6 weeks", "2-day bootcamp"
  price         Int?          // price in smallest currency unit or whole

  // Tech and topic classification
  techStack     String[]      // e.g. ["Python", "Pandas", "Excel"]
  tools         String[]      // e.g. ["Word", "PowerPoint"]
  tags          String[]      // e.g. ["data-science", "beginner"]
  
  // Learning outcomes - what students will learn
  learningOutcomes String[]   // e.g. ["Build web apps", "Deploy to cloud"]

  heroImageUrl  String?

  isPublished   Boolean       @default(false)

  sections      CourseSection[]
  leads         Lead[]
}

model CourseSection {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  courseId  String
  course    Course   @relation(fields: [courseId], references: [id])

  title     String
  order     Int
  content   String?  // markdown or rich text
}

model Lead {
  id        String      @id @default(uuid())
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  name      String
  email     String
  phone     String?

  message   String?
  source    String      // e.g. "course-page", "contact-page"
  status    LeadStatus  @default(NEW)

  courseId  String?
  course    Course?     @relation(fields: [courseId], references: [id])
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum LeadStatus {
  NEW
  CONTACTED
  ENROLLED
  LOST
}

// Blog Post Model
model BlogPost {
  id          String      @id @default(uuid())
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  title       String
  slug        String      @unique
  excerpt     String?     // Short summary for cards
  content     String?     // Full markdown content
  
  coverImage  String?     // URL to cover image
  
  author      String?     // Author name
  category    String?     // e.g. "Data Science", "Career Tips", "Tutorials"
  tags        String[]    // e.g. ["python", "beginners", "tips"]
  
  readTime    Int?        // Estimated read time in minutes
  
  isPublished Boolean     @default(false)
  publishedAt DateTime?   // When the post was published
}

// Newsletter Subscriber Model
model NewsletterSubscriber {
  id          String                    @id @default(uuid())
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
  
  email       String                    @unique
  name        String?
  
  isActive    Boolean                   @default(true) // Can unsubscribe
  subscribedAt DateTime                 @default(now())
  unsubscribedAt DateTime?
  
  source      String?                   // Where they subscribed from (footer, popup, etc.)

  @@map("newsletter_subscribers")
}

// Newsletter Campaign Model
model Newsletter {
  id          String                    @id @default(uuid())
  createdAt   DateTime                  @default(now())
  updatedAt   DateTime                  @updatedAt
  
  subject     String
  content     String                    // HTML or Markdown content
  previewText String?                   // Preview text for email clients
  
  status      NewsletterStatus          @default(DRAFT)
  
  sentAt      DateTime?
  sentCount   Int                       @default(0)
  openCount   Int                       @default(0)
  clickCount  Int                       @default(0)

  @@map("newsletters")
}

enum NewsletterStatus {
  DRAFT
  SCHEDULED
  SENDING
  SENT
  FAILED
}